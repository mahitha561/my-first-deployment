pipeline {
    agent any

    stages {
        stage('Create Beautiful Webpage') {
            steps {
                bat '''
                mkdir site

                echo ^<!DOCTYPE html^> > site\\index.html
                echo ^<html^> >> site\\index.html
                echo ^<head^> >> site\\index.html
                echo ^<title^>Jenkins Pipeline Success^</title^> >> site\\index.html
                echo ^</head^> >> site\\index.html
                echo ^<body style="font-family:Arial; text-align:center; background:#f4f6f8;"^> >> site\\index.html
                echo ^<h1^>ðŸš€ Pipeline Successful^</h1^> >> site\\index.html
                echo ^<p^>Webpage generated by Jenkins Pipeline^</p^> >> site\\index.html
                echo ^</body^> >> site\\index.html
                echo ^</html^> >> site\\index.html
                '''
            }
        }

        stage('Publish Webpage') {
            steps {
                archiveArtifacts artifacts: 'site/index.html'
            }
        }
    }
}
